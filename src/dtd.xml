<!DOCTYPE CONFIG [
<!ELEMENT IP_VERSION (#PCDATA)>
<!ELEMENT IP_VERSION_AUTH (#PCDATA)>
<!ELEMENT CONFIG (PAC, PAA)>
<!ELEMENT PAC (IP, PORT, SESSION, ALGORITHMS, USER, PASSWORD, CLIENT_CERTS, FRAGMENT_SIZE, PING_MECHANISM)>
<!ELEMENT PAA  (IP, PORT, SESSION, ALGORITHMS, SERVER_CERTS, TIMEOUT_CLIENT, WORKERS, TIME_ANSWER, AUTH_SERVER, PING_MECHANISM)>
<!ELEMENT IP (#PCDATA)>
<!ELEMENT PORT (#PCDATA)>
<!ELEMENT SESSION (TIMEOUT)>
<!ELEMENT TIMEOUT (#PCDATA)>
<!ELEMENT ALGORITHMS (PRF, INTEGRITY)>
