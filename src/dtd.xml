<!ELEMENT INTEGRITY (#PCDATA)>
<!ELEMENT TIMEOUT_CLIENT (#PCDATA)>
<!ELEMENT WORKERS (#PCDATA)>
<!ELEMENT EAP_PIGGYBACK (#PCDATA)>
<!ELEMENT TIME_ANSWER (#PCDATA)>
<!ELEMENT CLIENT_CERTS (CA_CERT, CLIENT_CERT, CLIENT_KEY, PRIVATE_KEY)>
<!ELEMENT SERVER_CERTS (CA_CERT, SERVER_CERT, SERVER_KEY)>
<!ELEMENT CA_CERT (#PCDATA)>
<!ELEMENT CLIENT_CERT (#PCDATA)>
<!ELEMENT CLIENT_KEY (#PCDATA)>
<!ELEMENT PRIVATE_KEY (#PCDATA)>
<!ELEMENT FRAGMENT_SIZE (#PCDATA)>
<!ELEMENT SERVER_CERT (#PCDATA)>
<!ELEMENT SERVER_KEY (#PCDATA)>
<!ELEMENT AUTH_SERVER (IP_VERSION_AUTH, AS_IP, AS_PORT, SHARED_SECRET)>
<!ELEMENT AS_IP (#PCDATA)>
<!ELEMENT AS_PORT (#PCDATA)>
<!ELEMENT SHARED_SECRET (#PCDATA)>
<!ELEMENT PING_MECHANISM (PING_TIME, NUMBER_PING)>
<!ELEMENT PING_TIME (#PCDATA)>
<!ELEMENT NUMBER_PING (#PCDATA)>
]>
